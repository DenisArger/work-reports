# Telegram Bot
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Google Apps Script для /reports (обязательные для команды /reports)
GOOGLE_APPS_SCRIPT_WEB_APP_URL=https://script.google.com/macros/s/xxxx/exec
GOOGLE_APPS_SCRIPT_SECRET=your_secret_token

# Google Drive API режим (опционально, нужен только для /today)
# Если /today не используете, эти переменные не нужны.
# FOLDER_ID=your_folder_id_here
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
# REPORT_NAME_SUBSTRING=(Ответы)

# Для code.gs в Script Properties:
# APPS_SCRIPT_SECRET=<тот же секрет, что GOOGLE_APPS_SCRIPT_SECRET>
# FOLDER_ID=<ID папки с отчетами>

# Upstash Redis (опционально, дедупликация update_id)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Webhook scripts (нужно только для локальных скриптов webhook:*):
# Для локальной отладки - URL от ngrok (например: https://xxxx.ngrok-free.app)
WEBHOOK_BASE_URL=https://xxxx.ngrok-free.app
# Для скрипта webhook:prod (запускается локально).
# На самом Vercel переменная VERCEL_URL обычно задаётся автоматически.
VERCEL_URL=https://your-project.vercel.app
